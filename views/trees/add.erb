<div class="container">
  <div class="row">
    <div class="col my-4">Adding A Tree</div>
  </div>

  <div class="row">
    <div class="col">
      <% if @errors.any? %> <% @errors.each do |error| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %> <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <form action="/adding_tree" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Tree Name</label>
          <input type="text" name="name" id="name" class="form-control" value="<%= params[:name]%>" />
        </div>

        <div class="mb-3">
          <label for="type">type</label>
          <select class="form-select" name="type" id="type" aria-label="Selected Input">
            <option value="<% params['type'] %>">Choose Tree Types</option>
            <option value="Conniferous">Conniferous</option>
            <option value="Aspen">Aspen</option>
            <option value="Birch">Birch</option>
            <option value="Cedar">Cedar</option>
            <option value="Cherry">Cherry</option>
            <option value="Conifer">Conifer</option>
            <option value="Cottonwood">Cottonwood</option>
            <option value="Crabapple">Crabapple</option>
            <option value="Crepe Myrtles">Crepe Myrtles</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="leaf">Leaf</label>
          <select class="form-select" name="leaf_id" id="leaf_id">
            <% DB.execute("SELECT id, name FROM leafs").each do |leaf| %>
              <option selected value="<%= leaf['id'] %>"><%= leaf['name'] %></option>
            <% end %>
          </select>
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" id="age" name="age" placeholder="input your age" value="<% params['age'] %>" />
        </div>

        <div class="mb-3">
          <label for="seed_id">Seed</label>
          <select class="form-select" name="seed_id" id="seed_id">
            <% DB.execute("SELECT id, name FROM seeds").each do |seed| %>
                <option selected value="<%= seed['id'] %>">
                  <%= seed['name']%>
                </option>
            <% end %>
          </select>
        </div>

        <div class="mb-3">
          <div class="form-floating">
            <textarea class="form-control" placeholder="Description" name="description" id="description" style="height: 150px"></textarea>
            <label for="description">Describe the Tree</label>
          </div>
        </div>

        <button type="submit" class="btn btn-primary float-end">Submit</button>
      </form>
      <a href="/trees" class="btn btn-light">Back</a>
    </div>
  </div>
</div>
