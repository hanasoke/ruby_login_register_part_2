<div class="container">
  <div class="row">
    <div class="col my-4">Adding A leaf</div>
  </div>

  <div class="row">
    <div class="col">
      <% if @errors.any? %> <% @errors.each do |error| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %> <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <form action="/adding_leaf" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-control">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= params[:name]%>" />
        </div>
        <div class="mb-3">
          <label for="username">username</label>
          <input type="text" name="username" id="username" />
        </div>
        <div class="mb-3"></div>
        <div class="mb-3"></div>
      </form>
    </div>
  </div>
</div>
