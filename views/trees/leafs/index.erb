<div class="container">
  <div class="row">
    <div class="col my-4 text-center">
      <h1>Tree List</h1>
    </div>
  </div>

  <div class="row">
    <div class="col mb-2">
      <div class="btn-group float-start" role="group" aria-label="Database">
        <a href="/trees" class="btn btn-info">Tree</a>
        <a href="/seeds" class="btn btn-warning">Seed</a>
      </div>
      <div class="col mb-2 float-end">
        <a href="/add_leaf" class="btn btn-success">Add A Leaf</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <!-- Success Alert -->
      <% if session[:success] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div><%= session[:success]%></div>
        <button type="button" class="btn-closed" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <!-- Clear the flash message -->
      <% session[:success] = nil %> <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="table-dark">
          <tr>
            <td>No</td>
            <td>Name</td>
            <td>Type</td>
            <td>Age</td>
            <td>Description</td>
            <td>Action</td>
          </tr>
        </thead>
        <tbody>
          <% @leafs.each_with_index do |leaf, index| %>
          <tr>
            <!-- Interaction number starts from 1 -->
            <td><%= index + 1 %></td>
            <td><%= leaf['name'] %></td>
            <td><%= leaf['type'] %></td>
            <td><%= leaf['age'] %></td>
            <td><%= leaf['description']%></td>
            <td>
              <div class="btn-group" role="group">
                <a href="/leafs/<%= seed['id'] %>/edit" class="btn btn-info">Edit</a>

                <!-- Delete Button triggers the modal -->
                <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= leaf['id']%>">Delete</button>
              </div>

              <!-- Delete Confirmation Modal -->
              <div class="modal fade" id="deleteModal<%= leaf['id']%>" tabindex="-1" aria-labelledby="deleteModalLabel<%= leaf['id'] %>" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="deleteModalLabel<%= seed['id']%>">Confirm Deletion</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body mb-3">Are you sure want to delete this motor ?</div>

                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <form action="/leafs/<%= leaf['id'] %>/delete" method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                    </div>
                    
                  </div>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
