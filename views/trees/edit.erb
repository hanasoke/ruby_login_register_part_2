<div class="container">
  <div class="row">
    <div class="col my-4">
      <h1>Edit A Tree</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @errors.any? %> <% @errors.each do |error| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
      <% end %> <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <form action="/trees/<%= @tree['id'] %>" method="post" enctype="multipart/form-data">
        <!-- Hidden Method -->
        <div class="mb-3">
          <input type="hidden" name="_method" value="post" />
        </div>

        <!-- Name Field -->
        <div class="mb-3">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="#" />
        </div>

        <div class="mb-3">
          <label for="type">type</label>
          <select class="form-select" name="type" id="type" aria-label="Selected Input">
            <option value="#">Choose Tree Types</option>
            <option value="Conniferous">Conniferous</option>
            <option value="Aspen">Aspen</option>
            <option value="Birch">Birch</option>
            <option value="Cedar">Cedar</option>
            <option value="Cherry">Cherry</option>
            <option value="Conifer">Conifer</option>
            <option value="Cottonwood">Cottonwood</option>
            <option value="Crabapple">Crabapple</option>
            <option value="Crepe Myrtles">Crepe Myrtles</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="leaf">Leaf</label>
          <select class="form-select" name="leaf_id" id="leaf_id">
            <option selected value="#">#</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" id="age" name="age" placeholder="input your age" value="#" />
        </div>

        <div class="mb-3">
          <label for="seed_id">Seed</label>
          <select class="form-select" name="seed_id" id="seed_id">
            <option selected value="#">#</option>
          </select>
        </div>

        <div class="mb-3">
          <div class="form-floating">
            <textarea class="form-control" placeholder="Description" name="description" id="description" style="height: 150px"></textarea>
            <label for="description">Describe the Tree</label>
          </div>
        </div>

        <button type="submit" class="btn btn-primary float-end">Update</button>
      </form>
      <a href="/trees" class="btn btn-light">Back</a>
    </div>
  </div>
</div>
