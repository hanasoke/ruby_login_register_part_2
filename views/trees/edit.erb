<div class="container">
  <div class="row">
    <div class="col my-4">
      <h1>Edit A Tree</h1>
    </div>
  </div>

  <!-- Error Messages -->
  <div class="row">
    <div class="col">
      <% if @errors.any? %> <% @errors.each do |error| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div><%= error %></div>
        <button type="button" class="btn btn-close" data-bs-dismiss="alert"></button>
      </div>
      <% end %> <% end %>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="row">
    <div class="col">
      <form action="/trees/<%= @tree['id'] %>" method="post" enctype="multipart/form-data">
        <!-- Hidden Method Field -->
        <input type="hidden" name="_method" value="post" />

        <!-- Name Field -->
        <div class="mb-3">
          <label for="name" class="form-label">Tree Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= @tree['name']%>" />
        </div>

        <!-- Type Dropdown -->
        <div class="mb-3">
          <label for="type" class="form-label">Type</label>
          <select class="form-select" name="type" id="type" type="text" aria-label="Select Tree Type">
            <option selected value="<%= @tree['type'] %>"><%= @tree['type'] %></option>
            <option value="Conniferous">Conniferous</option>
            <option value="Aspen">Aspen</option>
            <option value="Birch">Cedar</option>
            <option value="Cedar">Cedar</option>
            <option value="Cherry">Cherry</option>
            <option value="Conifer">Conifer</option>
            <option value="Cottonwood">Cottonwood</option>
            <option value="Crabapple">Crabapple</option>
            <option value="Crepe Myrtles">Crepe Myrtles</option>
          </select>
        </div>

        <!-- Leaf Dropdown -->
        <div class="mb-3">
          <label for="leaf_id" class="form-label">Leaf</label>
          <select class="form-select" type="text" name="leaf_id" id="leaf_id">
            <% if @leafs.any? %>
                <% @leafs.each do |leaf| %>
                    <option value="<%= leaf['id'] %>" <%= @tree['leaf_id'].to_i == leaf['id'] ? 'selected' : '' %>>
                        <%= leaf['name'] %>
                    </option>
                <% end %>
            <% else %>
                <option value="" disabled>No leafs available</option>
            <% end %>
          </select>
        </div>

        <!-- Age Field -->
        <div class="mb-3">
          <label for="age">Age</label>
          <input type="number" name="age" id="age" class="form-control" value="<%= @tree['age'] %>" />
        </div>

        <!-- Seed Dropdown -->
        <div class="mb-3">
          <label for="seed_id" class="form-label">Seed</label>
          <select class="form-select" type="text" name="seed_id" id="seed_id">
            <% if @seeds.any? %>
                <% @seeds.each do |seed| %>
                    <option value="<%= seed['id'] %>" <%= @tree['seed_id'].to_i == seed['id'] ? 'selected' : '' %>>
                        <%= seed['name'] %>
                    </option>
                <% end %>
            <% else %>
                <option value="" disabled>No seeds available</option>
            <% end %>
          </select>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
          <label for="username">Description</label>
          <textarea class="form-control" name="description" id="description" rows="5" value="<%= @tree['age'] %>"><%= @tree['description'] %></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary float-end">Update</button>
      </form>
      <a href="/trees" class="btn btn-light">Back</a>
    </div>
  </div>
</div>
